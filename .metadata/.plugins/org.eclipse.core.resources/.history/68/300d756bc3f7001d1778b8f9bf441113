package stçobu;

import java.util.Scanner;

public class stçbu {
    public static void main(String[] args) {
        System.out.println("Sayının Tek Mi Çift Mi Olduğunu Bulma Uygulaması");
        Scanner scanner = new Scanner(System.in);

        System.out.println("Dizinin Eleman Sayısını Giriniz: ");
        int diziLength = scanner.nextInt();
        scanner.nextLine();

        int[] sayilar = new int[diziLength];

        for (int i = 0; i < sayilar.length; i++) {
            System.out.println("Dizinin " + i + ". index değerini giriniz: ");
            sayilar[i] = scanner.nextInt();
            scanner.nextLine();
            tekMiCiftMi(sayilar[i]);
        }
    }

    public static void tekMiCiftMi(int sayi) {
        if (sayi % 2 == 0) {
            System.out.println("Sayı: " + sayi + " Çifttir");
        } else {
            System.out.println("Sayı: " + sayi + " Tektir");
        }
    }
}
